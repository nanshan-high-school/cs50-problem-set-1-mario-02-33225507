#include <iostream>
using namespace std;
int main() {
    int height;
    cout << "Enter height:";
    cin >> height;
    for (int x = 2; x < height + 2; x++) {
        for (int y = height + 1; y > x; y--) {
            cout << " ";
        }
        for (int y = 1; y < x; y++) {
            cout << "#";
        }
        cout << " " ;
        for (int y = 1; y < x; y++) {
            cout << "#";
        }
        cout << "\n";
    }
}
