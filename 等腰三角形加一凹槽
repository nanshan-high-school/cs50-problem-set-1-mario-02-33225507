#include <iostream>
using namespace std;
int main() {
    int height, a, y, z;
    cout << "Enter height:";
    cin >> height;
    a = height + 2;
    y = height + 1;
    z = height + 1;
    for (int x = 2; x < a; x++) {
        for (int y = z; y > x; y--) {
            cout << " ";
        }
        for (int y = 1; y < x; y++) {
            cout << "#";
        }
        cout << " " ;
        for (int y = 1; y < x; y++) {
            cout << "#";
        }
        cout << "\n";
    }    
}
